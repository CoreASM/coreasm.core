use StandardPlugins
use OperatorPlugin

init initRule

operator infixl 50 !!  on STRING * STRING * NUMBER = err
operator infixl 50 ?   on STRING * STRING * NUMBER = err
operator infixl 50 ##  on STRING = err
operator infixl 50 ~   on STRING = err
operator infixl 50 !!  on NUMBER = dec
operator infixl 50 ?   on NUMBER = dec
operator infixl 50 ##  on NUMBER * NUMBER * NUMBER = inc
operator infixl 50 ~   on NUMBER * NUMBER * NUMBER = inc

derived dec(x, y) = y - 1
derived inc(x, y) = y + 1
derived err(x, y) = "fail"

